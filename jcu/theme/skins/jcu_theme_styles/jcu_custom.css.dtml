}

#smallButtons #prevBtn a {
background-image: url(&dtml-portal_url;/slider_arrow_left.gif) !important;
}
#smallButtons #nextBtn a {
background-image: url(&dtml-portal_url;/slider_arrow_right.gif) !important;
}

#collage #slider .slide p img {
position:relative;
top:-100px;
}

/* Styles for our accordion. */
.accordion {
	background:#efefef url(&dtml-portal_url;/h400.png) 0 0;
	-background:#666;
        font-size:90%;
}

.accordion li a {
border-bottom:1px solid white;
}

/* accordion header */
.accordion h2 {
	background:#fff url(&dtml-portal_url;/h30.png);
	margin:0;
	padding:3px 15px;
	font-weight:normal;
	border-top:1px solid #fff;
	border-bottom:1px solid #ddd;
	cursor:pointer;		
}
.accordion h2:hover {
background-color:#FFF6D9;
}

*:first-child+html .accordion h2 { font-size: 14pt; } 
* html .accordion h2 { font-size: 14pt; }

/* currently active header */
.accordion h2.current {
	cursor:default;
	background-color:#FFF6D9;
}

/* accordion pane */
.accordion .accordion-pane {
	border:0px none;
	display:none;
	height:150px;
        padding:0 0.75em;
        line-height:1.5em;
}
body.kupu .accordion .accordion-pane, body.mceContentBody .accordion .accordion-pane {
display:block;
}

/* a title inside pane */
.accordion .accordion-pane h3 {
	font-weight:normal;
	margin:0 0 -5px 0;
	color:#999;
}

.accordion img.image-left, .accordion img.image-right {
border: 0px none;
}

.contentleadimage_topic_summary .listingBar,
.contentleadimage_topic_summary .moreItemsLink {
display: none;
}

