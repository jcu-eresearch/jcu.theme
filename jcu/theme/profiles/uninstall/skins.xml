<?xml version="1.0"?>
<!-- This file holds the setup configuration for the portal_skins tool -->

<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Plone Default">

 <object name="jcu_theme_custom_images"
    meta_type="Filesystem Directory View"
    directory="jcu.theme:skins/jcu_theme_custom_images" remove="True" />
 <object name="jcu_theme_custom_templates"
    meta_type="Filesystem Directory View"
    directory="jcu.theme:skins/jcu_theme_custom_templates" remove="True" />
 <object name="jcu_theme_styles"
    meta_type="Filesystem Directory View"
    directory="jcu.theme:skins/jcu_theme_styles" remove="True" />

 <skin-path name="JCU Theme" based-on="Plone Default" remove="True" />

</object>
