}

.p4acalendar .event .location, .p4acalendar .day-event-popup .event .description {
	font-size: 0.8em;
}

.p4acalendar .event .location {
	color: #999;
}

.p4acalendar .eventlist .event .location {
	border-top: 1px dashed #ccc;
	padding-top: 3px;
}

.p4acalendar .eventlist .event .event_body {
    float: right;
    width: 83%;
